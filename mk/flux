	WjCryptLib_AesOfb\
	WjCryptLib_Md5\
	WjCryptLib_Rc4\
	WjCryptLib_Sha1\
	WjCryptLib_Sha256\
	WjCryptLib_Sha512
FLUX_O	= ${FLUX_:%=$BUILD/_libflux/%.o}

$BUILD/_libflux/%.o: libflux/%.c
	access -d $BUILD/_libflux || mkdir $BUILD/_libflux
	$CC $CFLAGS $CPPFLAGS $TARGET_ARCH -c -o $target $prereq

$BUILD/lib/libflux.a: $FLUX_O
	$AR $ARFLAGS $target $prereq
