MKSHELL	= rcxs

FLUX_	= \
	dns\
	r9fid\
	r9srv\
	r9gate\
	c9\
	time\
	json\
	c9_proto\
	strlcpy\
	cfg\
	mqueue\
	hgate\
	glob\
	util\
	str\
	t9\
	fs\
	twitch\
	isaac\
	isaacbhc\
	ulid\
	base32\
	fmt\
	adopt\
	spawn\
	WjCryptLib_Aes\
